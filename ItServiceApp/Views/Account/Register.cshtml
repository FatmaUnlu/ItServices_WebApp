<!--register viewdeki propertyleri kullanarak form oluşturmak için-->
@model RegisterViewModel 

@{

    ViewBag.Title = "Kayıt Ekranı";
}

<!--====== Page Title start ======-->
<partial name="Partials/_PageStartPartial" />
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <div class="user-actions mb-40">
            <p>
                Üyeliğiniz var mı?<a asp-controller="Account" asp-action="Login"> Giriş için Tıklayın</a> <!--Kayıt varsa logine yönledirme-->
            </p>
            <div asp-validation-summary="All" class="text-danger"></div> <!-- validation mesajlarını göstermeye yarar.-->
        </div>
        <form method="post" asp-controller="Account" asp-action="Register"> <!--httpposta yönlendir account controllerda--> 
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">Kayıt Formu</h3>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="UserName"> UserName</label>
                                    <input type="text" asp-for="UserName"> @*username propertysine input atama*@
                                    <span asp-validation-for=UserName class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input type="text" asp-for="Email">
                                    <span asp-validation-for=Email class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Name">Name</label>
                                    <input type="text" asp-for="Name">
                                    <span asp-validation-for=Name class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Surname">Surname</label>
                                    <input type="text" asp-for="Surname">
                                    <span asp-validation-for=Surname class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Password">Password</label>
                                    <input type="text" asp-for="Password">
                                    <span asp-validation-for=Password class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Confirm Password</label>
                                    <input type="text" asp-for="ConfirmPassword">
                                    <span asp-validation-for=ConfirmPassword class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="payment-box mt-30">
                                    <input type="submit" class="main-btn value="Kayıt Ol">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles
    {
<style>
    input: {
        border: solid 1px #e3eeff;
        height: 50px;
        padding: 0 15px;
    }
</style>
    }